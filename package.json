{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "turbo run postinstall",
    "db-push": "npm run db-push -w @fooguess/db",
    "etl": "npm start -w @fooguess/etl",
    "submit:android": "eas build --platform android --auto-submit -w @fooguess/server",
    "build:server": "npm run build -w @fooguess/server",
    "start:server": "npm start -w @fooguess/server",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "find . -name node_modules -o -name .next -o -name .expo -type d -prune | xargs rm -rf",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest"
  }
}
